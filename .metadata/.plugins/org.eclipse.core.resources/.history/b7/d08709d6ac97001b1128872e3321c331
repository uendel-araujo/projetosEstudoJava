import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		/* Exercicio 1 - Faça um programa para ler dois valores inteiros, e depois mostrar na tela a soma desses números com uma 
			mensagem explicativa */
		System.out.println("Digite o primeiro valor: ");
		int x = sc.nextInt() ;
		System.out.println("Digite o ssegundo valor: ");
		int y = sc.nextInt();
		int soma = x + y;
		System.out.printf("O valor da soma dos dois número é: %d%n", soma);
		System.out.println();
		
		
		
		

	}

}
